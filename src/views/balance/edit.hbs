<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{balance.id_balance}}" method="post">
                        <div class="form-group">
                            <input type="text" value="{{balance.concept}}" class="form-control" name="concept" placeholder="Concepto" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{balance.amount}}" class="form-control" name="amount" placeholder="Monto">
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-control" name="date" placeholder="Fecha"> {{balance.date}}
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Tipo</label>
                            </div>
                            <select class="custom-select" name="type" id="category" size="1" onchange="makeSubmenu(this.value)">
                                <option value="" disabled selected>Seleccione un tipo</option>
                                <option>Ingreso</option>
                                <option>Egreso</option>
                            </select>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Categoría</label>
                                </div>
                                <select class="custom-select" value="{{balance.category}}" name="category" id="categorySelect" size="1">
                                    <option value="" disabled selected>Seleccione la categoría</option>
                                    <option></option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>