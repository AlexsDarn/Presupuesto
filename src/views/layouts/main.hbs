    <script type="text/javascript">
        var subcategory = {
            Ingreso: ["Trabajo", "Pensión", "Regalo", "Ventas", "Negocios", "Independiente", "Acciones"],
            Egreso: ["Arriendo", "Servicios", "Comida", "Higiene personal", "Aseo", "Mascotas", "Familia", "Amigos", "Ahorro", "Compras", "Compras online", "Juegos", "Vehículo", "Impuestos", "Seguro", "Vestuario"]
        }

        function makeSubmenu(value) {
            if (value.length == 0) document.getElementById("categorySelect").innerHTML = "<option></option>";
            else {
                var category = "";
                for (categoryId in subcategory[value]) {
                    category += "<option>" + subcategory[value][categoryId] + "</option>";
                }
                document.getElementById("categorySelect").innerHTML = category;
            }
        }

        function resetSelection() {
            document.getElementById("category").selectedIndex = 0;
            document.getElementById("categorySelect").selectedIndex = 0;
        }
    </script>
